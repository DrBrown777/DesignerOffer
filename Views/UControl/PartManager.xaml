                                    Header="Цена вх" 
                                    Binding="{Binding Path=Entry_Price}"/>
                <DataGridTextColumn CellStyle="{StaticResource ResourceKey=PriceIn}"
                                    Header="Сумма вх" IsReadOnly="True" 
                                    Binding="{Binding Path=Entry_Summ}"/>
